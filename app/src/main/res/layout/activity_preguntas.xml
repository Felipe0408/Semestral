<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Preguntas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="66dp"
                android:layout_height="39dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/baseline_arrow_back_24" />

            <TextView
                android:id="@+id/Titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Prueba"
                android:textColor="#012b7e"
                android:textSize="35sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.08" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Conteste correctamente las siguientes preguntas:"
                android:textColor="#474E53"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.322" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Pregunta1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="1- ¿Qué es un algoritmo?"
                    android:textColor="#474E53"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.322" />

                <RadioGroup
                    android:id="@+id/RG1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/p1_r1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Una serie de pasos que se deben seguir para resolver un problema. " />

                    <RadioButton
                        android:id="@+id/p1_r2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Una función que toma un valor de entrada y devuelve un valor de salida." />

                    <RadioButton
                        android:id="@+id/p1_r3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Una estructura de datos que almacena información." />

                    <RadioButton
                        android:id="@+id/p1_r4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Una máquina que puede pensar por sí misma." />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Pregunta2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="2- ¿Cuáles son los diferentes tipos de algoritmos?"
                    android:textColor="#474E53"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.322" />

                <RadioGroup
                    android:id="@+id/RG2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/p2_r1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Algoritmos de búsqueda, algoritmos de clasificación, algoritmos de optimización y algoritmos de aprendizaje automático." />

                    <RadioButton
                        android:id="@+id/p2_r2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Algoritmos de búsqueda y algoritmos de clasificación." />

                    <RadioButton
                        android:id="@+id/p2_r3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Algoritmos de optimización y algoritmos de aprendizaje automático." />

                    <RadioButton
                        android:id="@+id/p2_r4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Algoritmos de búsqueda, algoritmos de clasificación y algoritmos de optimización." />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Pregunta3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="3- ¿Cuáles son las ventajas de usar algoritmos?"
                    android:textColor="#474E53"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.322" />

                <RadioGroup
                    android:id="@+id/RG3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/p3_r1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Velocidad, eficiencia y precisión." />

                    <RadioButton
                        android:id="@+id/p3_r2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Flexibilidad, facilidad de implementación y precisión." />

                    <RadioButton
                        android:id="@+id/p3_r3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Velocidad, eficiencia y flexibilidad." />

                    <RadioButton
                        android:id="@+id/p3_r4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Eficiencia, precisión y facilidad de implementación." />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Pregunta4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="4- ¿Cuáles son las desventajas de usar algoritmos?"
                    android:textColor="#474E53"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.322" />

                <RadioGroup
                    android:id="@+id/RG4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/p4_r1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Complejidad, posibilidad de errores y requerimiento de recursos." />

                    <RadioButton
                        android:id="@+id/p4_r2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Flexibilidad, dificultad de implementación y precisión." />

                    <RadioButton
                        android:id="@+id/p4_r3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Velocidad, eficiencia y flexibilidad." />

                    <RadioButton
                        android:id="@+id/p4_r4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Eficiencia, precisión y facilidad de implementación." />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Pregunta5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="5- ¿Cuáles son los diferentes lenguajes de programación que se pueden usar para implementar algoritmos?"
                    android:textColor="#474E53"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.322" />

                <RadioGroup
                    android:id="@+id/RG5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/p5_r1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="C++, Java, Python, R y otros." />

                    <RadioButton
                        android:id="@+id/p5_r2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="C++ y Java." />

                    <RadioButton
                        android:id="@+id/p5_r3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Java y Python." />

                    <RadioButton
                        android:id="@+id/p5_r4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Python y R." />
                </RadioGroup>

                <Button
                    android:id="@+id/bEnviar"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="128dp"
                    android:layout_marginEnd="130dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#1409AF"
                    android:text="Enviar"
                    android:textSize="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.442" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>